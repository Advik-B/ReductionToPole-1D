/* Modern Light Theme for RTP Processor Application */

/* Global Application Styling */
QApplication {
    background-color: #f8f9fa;
    color: #2c3e50;
    font-family: "Segoe UI", "Arial", sans-serif;
    font-size: 9pt;
}

/* Main Widget Background */
QWidget {
    background-color: #ffffff;
    color: #2c3e50;
    border: none;
}

/* Labels */
QLabel {
    color: #34495e;
    background-color: transparent;
    font-weight: 500;
    padding: 2px;
}

/* Title Label (Main Header) */
QLabel#label {
    color: #2980b9;
    font-size: 18pt;
    font-weight: bold;
    padding: 15px;
    background-color: #ecf0f1;
    border: 1px solid #d5dbdb;
    border-radius: 8px;
    margin: 5px;
}

/* Push Buttons */
QPushButton {
    background-color: #3498db;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: 500;
    min-width: 80px;
    min-height: 28px;
}

QPushButton:hover {
    background-color: #2980b9;
    transform: translateY(-1px);
}

QPushButton:pressed {
    background-color: #21618c;
    transform: translateY(0px);
}

QPushButton:disabled {
    background-color: #bdc3c7;
    color: #7f8c8d;
}

/* Browse Button - Special Styling */
QPushButton#pushButton {
    background-color: #27ae60;
}

QPushButton#pushButton:hover {
    background-color: #229954;
}

/* Compute Button - Special Styling */
QPushButton#pushButton_3 {
    background-color: #e74c3c;
    font-weight: bold;
}

QPushButton#pushButton_3:hover {
    background-color: #c0392b;
}

/* Export Button - Special Styling */
QPushButton#pushButton_2 {
    background-color: #f39c12;
}

QPushButton#pushButton_2:hover {
    background-color: #e67e22;
}

/* Line Edit (File Path Display) */
QLineEdit {
    background-color: #ffffff;
    border: 2px solid #ddd;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 9pt;
    color: #2c3e50;
    selection-background-color: #3498db;
    selection-color: white;
}

QLineEdit:focus {
    border-color: #3498db;
    background-color: #fafbfc;
}

QLineEdit:read-only {
    background-color: #f8f9fa;
    color: #6c757d;
}

/* Combo Boxes */
QComboBox {
    background-color: #ffffff;
    border: 2px solid #ddd;
    border-radius: 6px;
    padding: 6px 12px;
    min-width: 120px;
    color: #2c3e50;
}

QComboBox:hover {
    border-color: #3498db;
}

QComboBox:focus {
    border-color: #2980b9;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #7f8c8d;
    margin-right: 5px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    selection-background-color: #3498db;
    selection-color: white;
    outline: none;
}

/* Double Spin Boxes */
QDoubleSpinBox {
    background-color: #ffffff;
    border: 2px solid #ddd;
    border-radius: 6px;
    padding: 6px 8px;
    color: #2c3e50;
    min-width: 80px;
}

QDoubleSpinBox:hover {
    border-color: #3498db;
}

QDoubleSpinBox:focus {
    border-color: #2980b9;
    background-color: #fafbfc;
}

QDoubleSpinBox::up-button, QDoubleSpinBox::down-button {
    background-color: #ecf0f1;
    border: none;
    width: 16px;
    border-radius: 3px;
}

QDoubleSpinBox::up-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #3498db;
}

QDoubleSpinBox::up-arrow, QDoubleSpinBox::down-arrow {
    width: 8px;
    height: 8px;
}

/* Sliders */
QSlider::groove:horizontal {
    background-color: #ecf0f1;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #3498db;
    border: none;
    height: 18px;
    width: 18px;
    border-radius: 9px;
    margin: -6px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #2980b9;
    transform: scale(1.1);
}

QSlider::handle:horizontal:pressed {
    background-color: #21618c;
}

QSlider::sub-page:horizontal {
    background-color: #3498db;
    border-radius: 3px;
}

QSlider::add-page:horizontal {
    background-color: #ecf0f1;
    border-radius: 3px;
}

/* Tab Widget */
QTabWidget {
    background-color: transparent;
}

QTabWidget::pane {
    background-color: #ffffff;
    border: 2px solid #ddd;
    border-radius: 8px;
    margin-top: -1px;
}

QTabBar::tab {
    background-color: #ecf0f1;
    color: #7f8c8d;
    padding: 10px 20px;
    margin-right: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-weight: 500;
}

QTabBar::tab:selected {
    background-color: #3498db;
    color: white;
}

QTabBar::tab:hover:!selected {
    background-color: #d5dbdb;
    color: #2c3e50;
}

/* Table Widget */
QTableWidget {
    background-color: #ffffff;
    alternate-background-color: #f8f9fa;
    gridline-color: #ecf0f1;
    border: 1px solid #ddd;
    border-radius: 6px;
    selection-background-color: #3498db;
    selection-color: white;
}

QTableWidget::item {
    padding: 8px;
    border-bottom: 1px solid #ecf0f1;
}

QTableWidget::item:selected {
    background-color: #3498db;
    color: white;
}

QHeaderView::section {
    background-color: #34495e;
    color: white;
    padding: 10px;
    border: none;
    font-weight: bold;
}

QHeaderView::section:hover {
    background-color: #2c3e50;
}

/* Progress Bar */
QProgressBar {
    background-color: #ecf0f1;
    border: 2px solid #ddd;
    border-radius: 6px;
    text-align: center;
    color: #2c3e50;
    font-weight: bold;
}

QProgressBar::chunk {
    background-color: #27ae60;
    border-radius: 4px;
    margin: 1px;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #f8f9fa;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #bdc3c7;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #95a5a6;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollBar:horizontal {
    background-color: #f8f9fa;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #bdc3c7;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #95a5a6;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
}

/* Graphics View (Matplotlib Container) */
QGraphicsView {
    background-color: #ffffff;
    border: 2px solid #ddd;
    border-radius: 6px;
}

/* Message Box Styling */
QMessageBox {
    background-color: #ffffff;
    color: #2c3e50;
}

QMessageBox QPushButton {
    min-width: 70px;
    padding: 6px 12px;
}

/* Tooltips */
QToolTip {
    background-color: #2c3e50;
    color: white;
    border: none;
    padding: 8px;
    border-radius: 4px;
    font-size: 9pt;
}

/* Grid Layout Spacing */
QWidget[objectName="Form"] {
    background-color: #f8f9fa;
    padding: 10px;
}

/* Custom Frames for Grouping */
QFrame {
    background-color: #ffffff;
    border: 1px solid #ecf0f1;
    border-radius: 6px;
    margin: 2px;
}

/* Animation Effects (CSS3-like) */
QPushButton, QComboBox, QLineEdit, QDoubleSpinBox {
    transition: all 0.2s ease-in-out;
}

/* Focus Ring */
QWidget:focus {
    outline: 2px solid #3498db;
    outline-offset: 1px;
}

/* Disabled State */
QWidget:disabled {
    color: #95a5a6;
    background-color: #f8f9fa;
}

/* Special styling for parameter sections */
QLabel[text*="Field"], QLabel[text*="Spacing"], QLabel[text*="Azimuth"] {
    font-weight: 600;
    color: #2c3e50;
    background-color: #ecf0f1;
    padding: 6px 10px;
    border-radius: 4px;
    margin: 2px 0;
}

/* Card-like containers */
QWidget[objectName^="tab"] {
    background-color: #ffffff;
    border-radius: 8px;
    padding: 10px;
}

/* Status and info elements */
QLabel[objectName="fileName"] {
    font-style: italic;
    color: #7f8c8d;
    background-color: transparent;
    padding: 4px 8px;
}